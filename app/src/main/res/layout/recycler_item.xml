<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="300dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="4dp"
                                    card_view:cardCornerRadius="4dp">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_weight="11"
                     android:orientation="vertical"
                     android:padding="5dp">

            <ImageView
                android:id="@+id/listPostImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/dump"/>

            <TextView
                android:id="@+id/listPostAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#a7565656"
                android:gravity="center"
                android:padding="10dp"
                android:text="Post Address"
                android:textColor="#FFF"
                android:textSize="13pt"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            >

            <TextView
                android:id="@+id/supportBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#a7565656"
                android:padding="10dp"
                android:text="Support"
                android:textColor="#FFF"
                android:textSize="13pt"/>

            <TextView
                android:id="@+id/listPostLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/supportBtn"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_circle_border"
                android:padding="10dp"
                android:text="23"
                android:textColor="#FFF"
                android:textSize="13pt"/>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
